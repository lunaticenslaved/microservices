{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "include": ["./src"]
}

model Nutrients {
    id String @id @default(uuid()) @db.Uuid

    calories Float @default(0) @db.Real
    proteins Float @default(0) @db.Real
    fats     Float @default(0) @db.Real
    carbs    Float @default(0) @db.Real
    fibers   Float @default(0) @db.Real

    product Product?

    @@map("nutrients")
}

